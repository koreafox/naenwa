<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NaenwaRemote" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Button Styles -->
        <item name="materialButtonStyle">@style/Widget.NaenwaRemote.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.NaenwaRemote.Button.Outlined</item>

        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.NaenwaRemote.CardView</item>

        <!-- Text Input Style -->
        <item name="textInputStyle">@style/Widget.NaenwaRemote.TextInputLayout</item>
    </style>

    <!-- Primary Button Style -->
    <style name="Widget.NaenwaRemote.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="Widget.NaenwaRemote.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Tonal Button Style -->
    <style name="Widget.NaenwaRemote.Button.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Icon Button Style -->
    <style name="Widget.NaenwaRemote.Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">@color/on_surface</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.NaenwaRemote.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/card_stroke</item>
    </style>

    <!-- Text Input Style -->
    <style name="Widget.NaenwaRemote.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/text_hint</item>
    </style>

    <!-- Status Text Styles -->
    <style name="TextAppearance.NaenwaRemote.Status" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.NaenwaRemote.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.NaenwaRemote.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Terminal Text Style -->
    <style name="TextAppearance.NaenwaRemote.Terminal" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/terminal_text</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>
