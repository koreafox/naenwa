<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardSession"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="3dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="16dp"
    app:strokeWidth="0dp"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- 왼쪽 액센트 라인 (선택 시 표시) -->
        <View
            android:id="@+id/accentLine"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@drawable/status_indicator"
            android:backgroundTint="@color/primary"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@id/iconContainer"
            app:layout_constraintBottom_toBottomOf="@id/iconContainer"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 아이콘 컨테이너 -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/session_icon_background"
            app:layout_constraintStart_toEndOf="@id/accentLine"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivSessionIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chat"
                app:tint="@color/primary"
                android:contentDescription="Chat icon" />

        </FrameLayout>

        <!-- 세션 제목 -->
        <TextView
            android:id="@+id/tvSessionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:textSize="15sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            android:letterSpacing="0.01"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteSession"
            app:layout_constraintTop_toTopOf="@id/iconContainer"
            app:layout_constraintBottom_toTopOf="@id/tvSessionDate"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="새 대화" />

        <!-- 세션 날짜 -->
        <TextView
            android:id="@+id/tvSessionDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:textColor="@color/text_hint"
            android:maxLines="1"
            android:letterSpacing="0.02"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteSession"
            app:layout_constraintTop_toBottomOf="@id/tvSessionTitle"
            app:layout_constraintBottom_toBottomOf="@id/iconContainer"
            tools:text="오늘 14:30" />

        <!-- 삭제 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteSession"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:alpha="0.6"
            app:icon="@drawable/ic_delete"
            app:iconSize="18dp"
            app:iconTint="@color/text_hint"
            app:rippleColor="@color/error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
