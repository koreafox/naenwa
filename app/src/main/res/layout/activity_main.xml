<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 메인 콘텐츠 -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 터미널 출력 카드 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/terminal_background"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- 터미널 헤더 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:background="@color/surface_variant">

                        <View
                            android:id="@+id/statusIndicator"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/status_indicator"
                            android:backgroundTint="@color/status_disconnected" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="연결 안됨"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <!-- 모드 선택 버튼들 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/mode_selector_background"
                            android:padding="2dp">

                            <!-- 원격 모드 버튼 -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnRemoteMode"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                app:icon="@drawable/ic_desktop_cloud"
                                app:iconSize="16dp"
                                app:iconTint="@color/primary"
                                android:backgroundTint="@color/mode_selected_bg"
                                app:cornerRadius="6dp" />

                            <!-- 로컬 모드 버튼 -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnLocalMode"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="2dp"
                                app:icon="@drawable/ic_phone"
                                app:iconSize="16dp"
                                app:iconTint="@color/text_hint"
                                android:backgroundTint="@android:color/transparent"
                                app:cornerRadius="6dp" />

                            <!-- 터미널 모드 버튼 -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnTerminalMode"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginStart="2dp"
                                app:icon="@drawable/ic_terminal"
                                app:iconSize="16dp"
                                app:iconTint="@color/text_hint"
                                android:backgroundTint="@android:color/transparent"
                                app:cornerRadius="6dp" />

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- 로딩 인디케이터 -->
                        <ProgressBar
                            android:id="@+id/progressLoading"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="4dp"
                            android:visibility="gone"
                            android:indeterminateTint="@color/primary" />

                        <!-- 컨트롤 버튼들 (콘솔 헤더에 통합) -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnHeaderMenu"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_menu"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRefresh"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_refresh"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnBuild"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_install"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_secondary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGitPush"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_git_push"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_secondary" />

                        <!-- 유틸리티 버튼들 -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearLog"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_clear"
                            app:iconSize="16dp"
                            app:iconTint="@color/text_secondary" />

                    </LinearLayout>

                    <!-- 세션 타이틀 바 -->
                    <LinearLayout
                        android:id="@+id/sessionTitleBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp"
                        android:background="@color/terminal_background"
                        android:visibility="gone">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="20dp"
                            android:background="@color/primary"
                            android:layout_marginEnd="10dp" />

                        <TextView
                            android:id="@+id/tvSessionTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="새 대화"
                            android:textSize="15sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEditTitle"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_edit"
                            app:iconSize="14dp"
                            app:iconTint="@color/text_hint" />

                    </LinearLayout>

                    <!-- 구분선 -->
                    <View
                        android:id="@+id/titleDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@color/card_stroke"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvChatMessages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:overScrollMode="never"
                        android:background="@color/terminal_background" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 메시지 입력 카드 (맨 하단) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/card_stroke"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="메시지 입력..."
                            android:singleLine="true"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_hint"
                            android:background="@android:color/transparent"
                            android:padding="8dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSend"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:enabled="false"
                        app:icon="@drawable/ic_send"
                        app:iconSize="20dp"
                        app:cornerRadius="24dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- 사이드 메뉴 (대화 세션 목록) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/drawerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 헤더 영역 -->
            <LinearLayout
                android:id="@+id/drawerHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="12dp">

                <!-- 타이틀 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="대화 목록"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@color/text_primary" />

                    <!-- 새 대화 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNewSession"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_add"
                        app:iconSize="20dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:cornerRadius="18dp" />

                    <!-- 설정 버튼 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSettings"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="8dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        app:icon="@drawable/ic_settings"
                        app:iconSize="20dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconTint="@color/text_secondary"
                        app:cornerRadius="18dp" />

                </LinearLayout>

                <!-- 세션 카운트 -->
                <TextView
                    android:id="@+id/tvSessionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_hint"
                    tools:text="3개의 대화" />

                <!-- 검색창 -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@color/surface_variant"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_search"
                            app:tint="@color/text_hint"
                            android:contentDescription="Search" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:hint="대화 검색..."
                            android:textColorHint="@color/text_hint"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:singleLine="true"
                            android:imeOptions="actionSearch"
                            android:importantForAutofill="no" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/card_stroke" />

            <!-- 세션 목록 영역 (빈 상태 포함) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- 세션 목록 RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSessions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_session" />

                <!-- 빈 상태 -->
                <LinearLayout
                    android:id="@+id/layoutEmptyState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_chat"
                        app:tint="@color/text_hint"
                        android:alpha="0.5"
                        android:contentDescription="No conversations" />

                    <TextView
                        android:id="@+id/tvEmptyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="대화가 없습니다"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvEmptySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="새 대화를 시작해 보세요"
                        android:textSize="13sp"
                        android:textColor="@color/text_hint"
                        android:gravity="center" />

                </LinearLayout>

            </FrameLayout>

            <!-- 하단 정보 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:background="@color/surface_variant">

                <View
                    android:id="@+id/drawerStatusIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/status_indicator"
                    android:backgroundTint="@color/status_disconnected" />

                <TextView
                    android:id="@+id/tvSessionInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="준비됨"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
